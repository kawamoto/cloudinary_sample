<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :img %><br />
    <%= f.hidden_field :img_cache %>
    <%= f.file_field :img %>
  </div>
  <div class="field">
    <%= f.label :facebook_id %><br />
    <%= f.number_field :facebook_id %>
  </div>
  <div class="field">
    <%= f.label :twitter_id %><br />
    <%= f.number_field :twitter_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

